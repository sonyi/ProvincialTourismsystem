<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true" 
        android:gravity="center">

        <TextView
            android:id="@+id/leibie"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1.5"
            android:text="TextView" />

        <TextView
            android:id="@+id/xiangmuleibie"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2.5"
            android:text="TextView" />

        <TextView
            android:id="@+id/xiangmumingcheng"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2.5"
            android:text="TextView" />

        <EditText
            android:id="@+id/xiangmumoney"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2.5"
            android:ems="10" 
            android:textSize="14sp"
            >
            <requestFocus />
        </EditText>

        <EditText
            android:id="@+id/youhuimoney"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2.5"
            android:ems="10" 
            android:textSize="14sp"
            />

        <EditText
            android:id="@+id/number"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1.5"
            android:ems="10" 
            android:textSize="14sp"
            />

        <EditText
            android:id="@+id/xiangmuzhekou"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1.5"
            android:ems="10"
            android:textSize="14sp"
             />

        <TextView
            android:id="@+id/zhekoumoney"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2.5"
            android:text="TextView" />

        <TextView
            android:id="@+id/lastmoney"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2.5"
            android:text="TextView" />

        <ImageView
            android:id="@+id/xiangmu_imageview"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_weight="1"
            android:ems="10" 
            android:textSize="14sp"
            android:src="@drawable/delete"
            />

    </LinearLayout>

</RelativeLayout>
