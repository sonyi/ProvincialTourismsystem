<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity" >
    
    
    <ImageView android:id="@+id/iv_view_line"
        android:layout_width="15dp"
        android:layout_height="fill_parent"
        android:src="@drawable/line_height"
        android:scaleType="fitXY"
        android:layout_centerHorizontal="true"/>

    <ListView android:id="@+id/lv_view_left"
        android:layout_toLeftOf="@id/iv_view_line"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        ></ListView>
    
    <ListView android:id="@+id/lv_view_right"
        android:layout_toRightOf="@id/iv_view_line"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        ></ListView>
  

</RelativeLayout>
