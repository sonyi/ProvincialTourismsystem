<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/titlebar_tv"
    android:orientation="horizontal" >

    <ImageView
        android:id="@+id/imageView1"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:scaleType="fitXY"
        android:background="@drawable/childer_line" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:layout_margin="3dp"
        android:background="@drawable/qingxin_graybg" >

        <com.funo.provincialtourism.view.MyGridView
            android:id="@+id/gridView1"
            android:listSelector="@drawable/listselect"
            android:scrollingCache="false"
            android:fadingEdge="none"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/map_toum"
            android:numColumns="2" />
    </LinearLayout>

</LinearLayout>