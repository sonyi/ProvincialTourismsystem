<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content" >


        <LinearLayout
            android:id="@+id/seconds_item"
            android:layout_width="match_parent"
            android:layout_height="90dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/map_viewsshape"
            android:orientation="vertical" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp" >

                <TextView
                    android:id="@+id/titlename1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="1.赵小姐的店" />

                <TextView
                    android:id="@+id/title1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="right"
                    android:text="零食、咖啡"
                    android:textColor="@color/text_a5"
                    android:textSize="@dimen/tabhost_tv_13" />
            </LinearLayout>

            <TextView
                android:id="@+id/addess1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:text="鼓浪屿49号"
                android:textColor="@color/text_a5"
                android:textSize="@dimen/tabhost_tv_13" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:layout_marginTop="5dp"
                android:background="@color/notify_timebg" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="horizontal" >

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_margin="2dp"
                    android:layout_weight="1"
                    android:background="@color/map_toum"
                    android:drawableLeft="@drawable/zhoubian__goto"
                    android:drawablePadding="-25dp"
                    android:gravity="center"
                    android:paddingLeft="30dp"
                    android:text="@string/zhoubian_dzl"
                    android:textColor="@color/text_a5" />

                <View
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="2dp"
                    android:layout_marginTop="2dp"
                    android:background="@color/notify_timebg"
                    android:textSize="@dimen/qingxin_tv17" />

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_margin="2dp"
                    android:layout_weight="1"
                    android:background="@color/map_toum"
                    android:drawableLeft="@drawable/zhoubian_phone"
                    android:drawablePadding="-25dp"
                    android:gravity="center"
                    android:paddingLeft="30dp"
                    android:text="@string/zhoubian_dh"
                    android:textColor="@color/text_a5" />
            </LinearLayout>
        </LinearLayout>

</RelativeLayout>